{% extends "layouts/base.njk" %}

{% block content %}
<main class="blog">
  <div class="container">
    <header class="page-header">
      <p class="eyebrow">Updates</p>
      <h1>Blog</h1>
      <p>Reverse-chronological updates tracking Normal Rooms milestones.</p>
    </header>

    <section class="blog__list" aria-label="Blog posts">
      {% for group in blog.groups %}
        {% for post in group.posts %}
        <article class="post-card"{% if loop.first %} id="{{ group.anchor }}"{% endif %}>
          <header>
            <h2><a href="{{ post.href }}">{{ post.title }}</a></h2>
            <p class="post-card__meta">{{ post.meta }}{% if post.tags.length %} Â· Tags:
              {% for tag in post.tags %}
                <a class="tag" href="{{ tag.href }}">{{ tag.label }}</a>{% if not loop.last %},{% endif %}
              {% endfor %}
            {% endif %}</p>
          </header>
          <p>{{ post.summary }}</p>
          <a class="card__link" href="{{ post.href }}">Read more</a>
        </article>
        {% endfor %}
      {% endfor %}
    </section>

    <section class="archives">
      <h2>Archives</h2>
      <ul class="list">
        {% for archive in blog.archives %}
        <li><a href="{{ archive.href }}">{{ archive.label }}</a></li>
        {% endfor %}
      </ul>
    </section>
  </div>
</main>
{% endblock %}
