{
  "name": "normal-rooms-site",
  "version": "1.0.0",
  "private": true,
  "description": "Static Normal Rooms website with automated smoke tests.",
  "type": "module",
  "scripts": {
    "build": "node src/scripts/build.mjs",
    "new": "node src/scripts/new-content.mjs",
    "new:blog": "node src/scripts/new-content.mjs blog",
    "new:lab": "node src/scripts/new-content.mjs lab",
    "test": "npm run test:links && npm run test:index && npm run test:search && npm run test:navigation && npm run test:footer",
    "test:links": "node --test tests/link-health.test.mjs",
    "test:index": "node --test tests/search-index.test.mjs",
    "test:search": "node --test tests/search-behavior.test.mjs",
    "test:navigation": "node --test tests/navigation-toggle.test.mjs",
    "test:footer": "node --test tests/footer.test.mjs"
  },
  "devDependencies": {
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "jsdom": "^24.0.0",
    "marked": "^12.0.2",
    "nunjucks": "^3.2.4",
    "yaml": "^2.4.2"
  }
}
